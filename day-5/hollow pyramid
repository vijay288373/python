def print_hollow_pyramid(height):
    for i in range(1, height + 1):
        for j in range(height - i):
            print(' ', end='')
        for k in range(2 * i - 1):
            if i == height or k == 0 or k == 2 * i - 2:
                print('*', end='')
            else:
                print(' ', end='')
        print()
height = 5
print_hollow_pyramid(height)
